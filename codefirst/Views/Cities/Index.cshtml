@model IEnumerable<codefirst.Models.Places.City>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.population)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.provinceCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.population)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.provinceCode)
        </td>
        <td>
